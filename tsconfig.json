{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "allowJs": true,
    "checkJs": false,
    "jsx": "preserve",
    "declaration": true,
    "isolatedModules": true,
    "strict": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    // ? Allows for "absolute" imports relative to project root (like pkg json)
    // * https://www.typescriptlang.org/docs/handbook/module-resolution.html
    "baseUrl": ".",
    "paths": {
      // ? Import aliases are centralized here and in package.json and are only
      // ? for non-ESM projects
      // ! Hence, updating these requires updating jest config in package.json!
      // * https://nextjs.org/docs/advanced-features/module-path-aliases
      "universe/*": ["src/*"],
      "multiverse/*": ["lib/*"],
      "testverse/*": ["test/*"],
      "externals/*": ["external-scripts/*"],
      "types/*": ["types/*"]
    },
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "skipLibCheck": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "inlineSourceMap": true
  },
  "include": [
    "types/**/*.ts*",
    "lib/**/*.ts*",
    "src/**/*.ts*",
    "test/**/*.ts*",
    "external-scripts/**/*.ts*"
  ],
  "exclude": ["node_modules"]
}
